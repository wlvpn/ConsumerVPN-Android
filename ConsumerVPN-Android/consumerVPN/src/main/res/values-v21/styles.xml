<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="WLVPNAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:colorAccent">@color/color_accent</item>
        <item name="colorPrimary">@color/color_primary</item>
        <item name="android:colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="android:colorPrimaryDark">@color/color_primary_dark</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:editTextStyle">@style/WLVPNEditTextStyle</item>
        <item name="android:textColorPrimary">@color/color_primary_text</item>
        <item name="android:textColorSecondary">@color/color_secondary_text</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:buttonStyle">@style/WLVPNButton</item>
    </style>

    <style name="WLVPNAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorAccent">@color/dialog_button_accent_color</item>
        <item name="colorAccent">@color/dialog_button_accent_color</item>
    </style>

    <style name="WLVPNAppPrimaryButtonTheme" parent="WLVPNAppTheme">
        <item name="android:backgroundTint">@color/button_primary_color</item>
        <item name="android:colorAccent">@color/button_primary_color</item>
        <item name="android:colorButtonNormal">@color/button_primary_color</item>
        <item name="android:colorControlHighlight">@color/button_primary_pressed</item>
        <item name="colorControlHighlight">@color/button_primary_pressed</item>
    </style>

    <style name="WLVPNAppSecondaryButtonTheme" parent="WLVPNAppTheme">
        <item name="android:backgroundTint">@color/button_secondary_color</item>
        <item name="android:colorAccent">@color/button_secondary_color</item>
        <item name="android:colorButtonNormal">@color/button_secondary_color</item>
        <item name="android:colorControlHighlight">@color/button_secondary_pressed</item>
        <item name="colorControlHighlight">@color/button_secondary_pressed</item>
    </style>

    <style name="WLVPNAppTertiaryButtonTheme" parent="WLVPNAppTheme">
        <item name="android:backgroundTint">@color/button_tertiary_color</item>
        <item name="android:colorAccent">@color/button_tertiary_color</item>
        <item name="android:colorButtonNormal">@color/button_tertiary_color</item>
        <item name="android:colorControlHighlight">@color/button_tertiary_pressed</item>
        <item name="colorControlHighlight">@color/button_tertiary_pressed</item>
    </style>

    <!-- Button Styles && Themes -->
    <style name="WLVPNButtonPrimary" parent="WLVPNButton">
        <item name="android:textColor">@color/button_primary_text_color</item>
    </style>

    <style name="WLVPNButtonSecondary" parent="WLVPNButton">
        <item name="android:textColor">@color/button_secondary_text_color</item>
    </style>

    <style name="WLVPNButtonTertiary" parent="WLVPNButton">
        <item name="android:textColor">@color/button_tertiary_text_color</item>
    </style>

    <style name="WLVPNRadioButton">
        <item name="android:button">@null</item>
        <item name="android:layout_height">@dimen/text_view_subtitle_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_label_title</item>
        <item name="android:textColor">@color/color_secondary_text</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:paddingStart">@dimen/activity_normal_spacing</item>
        <item name="android:paddingEnd">@dimen/activity_normal_spacing</item>
        <item name="android:background">@drawable/settings_row</item>
        <item name="android:drawableEnd">?android:attr/listChoiceIndicatorSingle</item>
        <item name="android:drawableRight">?android:attr/listChoiceIndicatorSingle</item>
    </style>

    <style name="WLVPNCheckbox">
        <item name="android:button">@null</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_label_title</item>
        <item name="android:textColor">@color/color_secondary_text</item>
        <item name="android:drawableEnd">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:drawableRight">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:background">@drawable/settings_row</item>
    </style>

    <style name="WLVPNDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/dialog_accent</item>
        <item name="colorPrimary">@color/dialog_primary</item>
        <item name="colorPrimaryDark">@color/dialog_primary_dark</item>
    </style>
</resources>