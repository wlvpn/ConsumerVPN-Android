<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextRegular">
        <item name="android:textSize">@dimen/textRegular</item>
    </style>

    <style name="TextMedium">
        <item name="android:textSize">@dimen/textMedium</item>
    </style>

    <style name="TextMediumLarge">
        <item name="android:textSize">@dimen/textMediumLarge</item>
    </style>

    <style name="TextLarge">
        <item name="android:textSize">@dimen/textLarge</item>
    </style>

    <style name="TextLarge.Bold" parent="TextRegular">
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSmall" parent="TextRegular">
        <item name="android:textSize">@dimen/textSmall</item>
    </style>

    <!--region buttons-->
    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/white_40</item>
    </style>

    <style name="MaterialTextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/white_40</item>
    </style>

    <style name="PrimaryButtonStyle" parent="MaterialButtonStyle">
        <item name="android:backgroundTint">@color/color_accent</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="rippleColor">@color/dark_blue</item>
    </style>

    <style name="DisconnectButtonStyle" parent="MaterialButtonStyle">
        <item name="android:backgroundTint">@color/clear_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/clear_dark_red</item>
    </style>

    <style name="MaterialTextButtonStyle.Bold">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    <!--endregion buttons-->

    <!--region EditText-->
    <style name="EditTextStyle" parent="TextMedium">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColorHighlight">@color/white</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/white_80</item>
        <item name="hintTextColor">@color/white_40</item>
        <item name="errorTextColor">@color/error_red</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>
    <!--endregion EditText-->

    <!--region tabs-->
    <style name="TabsLayoutStyle" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabTextColor">@color/white_60</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabRippleColor">@color/color_primary_light</item>
    </style>

</resources>